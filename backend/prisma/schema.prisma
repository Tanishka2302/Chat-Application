generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id         String   @id @default(uuid())
  name       String   // âœ… revert to DB existing column
  email      String   @unique
  password   String
  profilePic String?
  createdAt  DateTime @default(now())

  messages   Message[]
  chats      Chat[]
}



model Chat {
  id        String   @id @default(uuid())
  users     User[]
  messages  Message[]
  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(uuid())
  content   String
  senderId  String
  chatId    String
  createdAt DateTime @default(now())

  sender User @relation(fields: [senderId], references: [id])
  chat   Chat @relation(fields: [chatId], references: [id])
}
